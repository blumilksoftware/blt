{
  "name": "blumilksoftware/blt",
  "description": "Behat + Laravel toolbox",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Krzysztof Rewak",
      "email": "krzysztof.rewak@blumilk.pl"
    }
  ],
  "require": {
    "php": "^8.1",
    "behat/behat": "^3.12",
    "phpunit/phpunit": "^9.5",
    "symfony/css-selector": "^6.2",
    "symfony/dom-crawler": "^6.2",
    "illuminate/bus": "v11.10.0"
  },
  "require-dev": {
    "blumilksoftware/codestyle": "^1.10",
    "illuminate/contracts": "^9.1|^10.0",
    "illuminate/http": "^9.1|^10.0",
    "illuminate/support": "^9.1|^10.0",
    "symfony/http-foundation": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Blumilk\\BLT\\": "src/"
    }
  },
  "scripts": {
    "cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff --config codestyle.php",
    "csf": "./vendor/bin/php-cs-fixer fix --diff --config codestyle.php",
    "test": "./vendor/bin/phpunit tests"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
