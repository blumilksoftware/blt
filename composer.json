{
  "name": "blumilksoftware/behat-laravel-toolbox",
  "description": "Behat + Laravel toolbox",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Krzysztof Rewak",
      "email": "krzysztof.rewak@blumilk.pl"
    }
  ],
  "require": {
    "php": "^8.0",
    "behat/behat": "^3.8.1",
    "phpunit/phpunit": "^9"
  },
  "require-dev": {
    "blumilksoftware/codestyle": "^0.1.1",
    "illuminate/contracts": "^8.33",
    "illuminate/http": "^8.33",
    "illuminate/support": "^8.33",
    "symfony/http-foundation": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "Blumilk\\BLT\\": "src/"
    }
  },
  "scripts": {
    "ecs": "./vendor/bin/ecs check",
    "test": "./vendor/bin/phpunit tests"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
