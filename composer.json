{
  "name": "local-blumilksoftware/blt",
  "description": "Behat + Laravel toolbox",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Krzysztof Rewak",
      "email": "krzysztof.rewak@blumilk.pl"
    }
  ],
  "require": {
    "php": "^8.3",
    "behat/behat": "^3.14",
    "phpunit/phpunit": "^11.0.1",
    "symfony/css-selector": "^7.1",
    "symfony/dom-crawler": "^7.1"
  },
  "require-dev": {
    "blumilksoftware/codestyle": "^3.1.0",
    "illuminate/contracts": "^11.9.2",
    "illuminate/http": "^11.9.2",
    "illuminate/support": "^11.9.2",
    "symfony/http-foundation": "^7.1"
  },
  "autoload": {
    "psr-4": {
      "Blumilk\\BLT\\": "src/"
    }
  },
  "scripts": {
    "cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff --config codestyle.php",
    "csf": "./vendor/bin/php-cs-fixer fix --diff --config codestyle.php",
    "test": "./vendor/bin/phpunit tests"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
